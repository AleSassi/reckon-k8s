{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "test-deployment",
    "labels": {
      "app": "test-deployment"
    }
  },
  "spec": {
    "replicas": 3,
    "selector": {
      "matchLabels": {
        "app": "test-deployment"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "test-deployment"
        }
      },
      "spec": {
        "topologySpreadConstraints": [
          {
              "maxSkew": 1,
              "topologyKey": "kubernetes.io/hostname",
              "whenUnsatisfiable": "DoNotSchedule",
              "labelSelector": {
                  "matchLabels": {
                      "app": "test-deployment"
                  }
              }
          }
        ],
        "containers": [
          {
            "name": "test-deployment",
            "image": "pinger:v1",
            "ports": [
              {
                "containerPort": 80
              }
            ]
          }
        ]
      }
    }
  }
}